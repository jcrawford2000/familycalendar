html
    head
        title #{title}
    body
        link(rel='stylesheet' href='//cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.6.0/fullcalendar.css')
        link(rel='stylesheet' href='//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/themes/cupertino/jquery-ui.min.css')
        script(src='//code.jquery.com/jquery-1.11.3.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.1/moment.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.6.0/fullcalendar.min.js')
        div(id='calendar')
        script.
            $(  document ).ready(function() {
                $('#calendar').fullCalendar({
                    theme: true,
                    businessHours: true,
                    editable: true,
                    header: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'month,agendaWeek,agendaDay'
                    },
                    events: [
                        // all day event
                        {
                            title  : 'Meeting',
                            start  : '2017-07-12'
                        },
                        // long-term event 
                        {
                            title  : 'Conference',
                            start  : '2017-07-13',
                            end    : '2017-07-15'
                        },
                        // short term event 
                        {
                            title  : 'Dentist',
                            start  : '2017-07-09T11:30:00',
                            end  : '2017-07-09T012:30:00',
                            allDay : false // will make the time show
                        }
                        ]
                });       
            });
        